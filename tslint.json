{
    /*
   * Possible values:
   * - the name of a built-in config
   * - the name of an NPM module which has a "main" file that exports a config object
   * - a relative path to a JSON file
    "extends": "tslint:latest",
   */
    "rules": {
        /*
     * Any rules specified here will override those from the base config we are extending
     */
        "max-line-length": [
            true,
            200
        ],
        "no-inferrable-types": true,
        "class-name": true,
        "comment-format": [
            true,
            "check-space"
        ],
        "indent": [
            true,
            "spaces"
        ],
        "eofline": true,
        "no-duplicate-variable": true,
        "no-eval": true,
        "no-arg": true,
        "no-internal-module": true,
        "no-trailing-whitespace": true,
        "no-bitwise": true,
        "no-shadowed-variable": true,
        "no-unused-expression": true,
        "no-unused-variable": true,
        "one-line": [
            true,
            "check-catch",
            "check-else",
            "check-open-brace",
            "check-whitespace"
        ],
        "quotemark": [
            true,
            "single",
            "avoid-escape"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "curly": true,
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-trailing-underscore"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ]
    },
    "rulesDirectory": [
        /*
     * A list of relative or absolute paths to directories that contain custom rules.
     * See the Custom Rules documentation below for more details.
     */
    ]
}